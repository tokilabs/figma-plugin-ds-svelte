{
	"include": ["src/**/*", "index.ts"],
	"compilerOptions": {
		"types": ["svelte", "@figma/plugin-typings"],
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"lib": ["es2020", "DOM"],
		"declaration": true,
		"isolatedModules": true,
		"preserveWatchOutput": true,
		"noEmit": true,
		"outDir": "public"
	},
	"exclude": ["node_modules"]
}
